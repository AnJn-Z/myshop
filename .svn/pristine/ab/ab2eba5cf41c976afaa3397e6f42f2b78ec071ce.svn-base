#navppt{
	height: 460px;
	position: relative;
	
}

#leftnav{
	width: 234px;
	height:445px;
	padding-top:15px;
	background-color:#51545b;
}

#ppt{
	width: 992px;
	height: 460px;
	background-color: darkmagenta;
	position: absolute;
	right: 0;
	top: 0;
}


#leftnav li a{
	color: #fff;
	font-size: 13px;
	text-decoration: none;
	line-height: 42px;
	display: block;
	padding-left: 28px;
}

#leftnav li a:hover
{
	background-color: #5e6168;
}

#ppt img{
	height: 460px;
}

#recommpro{
	height: 170px;
	margin-top: 14px;
}

#recommpro li{
	width: 316px;
	height: 170px;
	float: left;
	padding-left:14px;
}

#title {
    font-size: 24px;
    color: #333;
    font-weight: bold;
    padding-top: 42px;
    font-family: "幼圆";
    padding-bottom: 18px;
}

#prolist{
	height: 324px;
}

#prolist li{
	width: 230px;
	height:324px;
	float: left;    cursor: pointer;
	text-align: center;
	margin-left: 15px;
	background-color: #eee;
}

#prolist li:hover
{
	box-shadow: 0px 0px 10px 3px #ccc;
}


#prolist li.first{
	margin-left: 0;
}

#prolist li.last{
	width: 246px;
}

#prolist a{
	display: block;
}

#prolist a.hasimg
{
	padding-top: 50px;
}

#prolist a.hastxt
{
	text-decoration: none;
	color: #212121;
	font-size: 14px;
	padding: 10px;
}

#prolist p{
	font-size: 14px;
	color: #B0B0B0;
}


#prolist p.price
{
	    color: #f12020;
    font-weight: bold;
	padding-top: 15px;
}
