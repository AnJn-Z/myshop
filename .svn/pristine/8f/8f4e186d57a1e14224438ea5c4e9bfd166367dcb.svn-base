#loginheader{
	width: 100%;
	height:98px;
}

#main{
	width: 100%;
	height: 558px;
	background-color:#2F2F37;
	background: url(../img/login_back.jpg) no-repeat;
    background-size: 100% 100%;
	background-position: center center; 
}

#loginform{
	width: 410px;
	height: 500px;
	background-color:#fff;
	position: absolute;
	right: 0;
	top:30px;
	background-image: url(../img/loginbottom.png);
	background-repeat: no-repeat;
	background-position: center bottom 15px;
}

#loginform p.title{
	    width: 100%;
	height: 76px;
	font-size: 28px;
	color:#E0E0E0;
	text-align: center;
	padding-top: 30px;
	
}

#loginform p.title span{
	color: #ff6600;
}

#loginform p.title #saocode{
	color: #666;     width: 100%;
}

#loginform p.ff{
	height: 45px;
	width: 346px;
	border: solid 1px #ccc;
	margin: 0 auto;
}
.goto_reg:hover{color: #f12020;cursor: pointer;}

#loginform p.ff input{
	border: 0;
	width: 340px;
	height:45px;
	outline: none;
	padding-left: 5px;
}

#btnlogin {
    width: 348px;
    height: 50px;
    background-color: #005aaa;
    color: #fff;
    border: 0;
    font-size: 14px;
    font-weight: bold;
    letter-spacing: 5px;
    outline: none;
    margin: 15px 0;
    cursor: pointer;
}

#loginform p.btn
{
	padding-left:32px;
	padding-top: 20px;
}

.forgetpassword{
	text-align: right;
	color: #333;
	padding-right: 29px;
	padding-top: 5px;
}

.forgetpassword a{
	font-size: 14px;
	text-decoration: none;
	color: #333;
}
