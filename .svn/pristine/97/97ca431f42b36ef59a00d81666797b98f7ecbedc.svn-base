#title{
	border-bottom: solid 1px #ccc;
	font-size: 16px;
	height: 55px;
	line-height: 55px;
	padding-left: 5px;
	position: relative;	
}

#rightspan{
	color: #E9E0E9;
	font-size: 14px;
	position: absolute;
	right: 5px;
	top: 0;
}

#rightspan a{
	color: #616161;
	text-decoration: none;
}

#proview{
	width: 1226px;
	height:450px;
	position: relative;
}

#proview img {
    width: 350px;
    height: 320px;
    position: absolute;
    top: 60px;
    left: 40px;
}

#proviewdescription{
	width:730px;
	height:618px;
	position: absolute;
	right: 0;
	top: 0;
}

h3{
	font-size:22px;
	padding-top: 30px;
	color: #212121;
	font-weight: lighter;
	border-bottom:solid 1px #eee;
}

.p1{
	color: #B0B0B0;
	font-size: 14px;
	line-height: 24px;
	padding-top: 15px;
	padding-bottom: 15px;
	padding-right: 5px;
}

.p1 span{
	    color: #333;
}

p.price{
	color: #f12020;
	font-size: 28px;	
	margin:10px 0;
}
.btnaddtocar:hover{background:#ec6423;}
.btnaddtocar {
    display: block;
    width: 300px;
    height: 54px;
    cursor: pointer;
    background-color: #f12020;
    color: #fff;
    outline: none;
    text-align: center;
    line-height: 54px;
    font-size: 18px;
    margin-top: 20px;
    border-radius: 0px;
    margin-bottom: 25px;
    text-decoration: none;
    border: 0;
}

.briefdiv {
    padding: 15px;
    border-radius: 8px;
}

p.reback{
	padding-left: 30px;
	background-image: url(../img/proviewicon.png);
	background-repeat: no-repeat;
	background-position: 0 -5px;
}

#list {
    line-height: 35px;
    font-family: "等线";
        padding-top: 10px;
}
